<?xml version="1.0" encoding="UTF-8" ?>
 

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="lwplvx.docman.mapper.DocumentSamplesMapper">
    <sql id="documentSamplesColumns"> * </sql>

    <parameterMap  type="java.util.HashMap" id="parameterMapAdd">
        <parameter property="documentId"/>
        <parameter property="userId"/>
    </parameterMap>


    <parameterMap  type="java.util.HashMap" id="parameterMapSelectByDocumentId">
        <parameter property="documentId"/>
        <parameter property="userId"/>
    </parameterMap>

    <select id="selectByDocumentId" parameterMap="parameterMapSelectByDocumentId" resultType="lwplvx.docman.model.Documentsamples">
        select <include refid="documentSamplesColumns"/>
        from documentsamples
        where documentId= #{documentId} and userId=#{userId}
    </select>
</mapper>